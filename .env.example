# Database (PostgreSQL) connection string
DATABASE_URL=postgresql://username:password@host:port/dbname

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_or_service_role_key

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Redis (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# PostHog Analytics
POSTHOG_API_KEY=phc_your_posthog_project_api_key
POSTHOG_HOST=https://us.i.posthog.com


JWT_ACCESS_SECRET=youraccesstokensecret
JWT_REFRESH_SECRET=yourrefreshtokensecret
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
RESET_TOKEN_EXPIRY_MIN=60

# JWE (JSON Web Encryption) Configuration
# Generate a secure 256-bit (32-byte) key using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWE_ENCRYPTION_KEY=your_base64_encoded_32_byte_key_here
# Set to true to accept plain JWT tokens during migration period (default: false)
JWE_ALLOW_PLAIN_JWT=false

# Brevo Email Service
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_EMAIL=noreply@projxchange.com
BREVO_SENDER_NAME=ProjXchange

# Frontend URL for email links
FRONTEND_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=debug  # trace, debug, info, warn, error, fatal, silent
NODE_ENV=development  # development, production, test
