{
  "name": "backend-v1",
  "version": "1.0.0",
  "description": "A Hono backend project",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development dotenv -- nodemon --watch 'src/**/*.ts' --exec ts-node src/index.ts",
    "build": "pnpm db:migrate && tsc",
    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -- ts-node migrate.ts",
    "test": "eslint 'src/**/*.ts'"
  },
  "dependencies": {
    "@hono/node-server": "^1.17.1",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.0.2",
    "@hono/zod-validator": "^0.7.2",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.8.10",
    "postgres": "^3.4.7",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "husky": "^8.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}